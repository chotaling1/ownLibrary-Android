<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/book_image_view"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintStart_toEndOf="@id/book_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/book_image_view"
            android:id="@+id/title_text_view"
            android:text="Title"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:id="@+id/title_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/title_text_view"
            app:layout_constraintTop_toBottomOf="@id/title_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_micro"
            android:text="Harry Potter and the Idiot Wizard"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/title_text_view"
            app:layout_constraintTop_toBottomOf="@id/title_description_text_view"
            android:id="@+id/author_text_view"
            android:text="Author"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/author_description_text_view"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/title_text_view"
            app:layout_constraintTop_toBottomOf="@id/author_text_view"
            android:text="JK Idiot"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/extended_info_layout"
            app:layout_constraintStart_toStartOf="@id/title_text_view"
            app:layout_constraintEnd_toEndOf="@id/title_text_view"
            app:layout_constraintTop_toBottomOf="@id/author_description_text_view"
            app:layout_constraintBottom_toTopOf="@id/more_options_image">
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/publisher_text_view"
                android:text="Publisher"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/publisher_description_text_view"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/publisher_text_view"
                android:text="Stupid Publishing"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/shelf_text_view"
                android:layout_marginTop="@dimen/margin_normal"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/publisher_description_text_view"
                android:text="This book is in location on the blah shelf"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/more_options_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_layout"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:id="@+id/button_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_micro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:layout_marginStart="@dimen/margin_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/edit_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:icon="@android:drawable/ic_menu_edit"/>
            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:layout_marginStart="@dimen/margin_small"
                app:layout_constraintTop_toTopOf="@id/edit_button"
                app:layout_constraintStart_toEndOf="@id/edit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/delete_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:icon="@android:drawable/ic_menu_delete"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
